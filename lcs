#include<stdio.h>
#include<string.h>
#define LEFT 1
#define TOP 2
#define DAI 3 
int i,j,m,n,ar[20][20];
char st1[]="STONE";
char st2[]="LONGEST";
char lcs[20][20];
int max(int x, int y)
{
    return (x > y) ? x : y;
} 
void print(int m,int n)
{
    int i = m, j = n;
    if(i==0 || j==0)
    return;
    if(lcs[i][j]==DAI)
    {
        print(i-1,j-1);
        printf("%c",st1[i-1]);    
    }
    else if(lcs[i][j]==TOP)
    print(i-1,j);
    else
    print(i,j-1);
    
}           
int main()
{
    m=strlen(st1);
    n=strlen(st2);
    for(i=1;i<=m;i++)
    {
        for(j=1;j<=n;j++)
        {
            if(st1[i-1]==st2[j-1])
            {
                ar[i][j]=1+ar[i-1][j-1];
                lcs[i][j]=DAI;
                
            }
            else
            {
                ar[i][j]=max(ar[i-1][j],ar[i][j-1]);
                if(ar[i-1][j]>=ar[i][j-1])
                {
                    lcs[i][j]=TOP;
                    
                }
                else
                {
                    lcs[i][j]=LEFT;
                    
                }
            }
        }
    }
    for(i=0;i<=m;i++)
    {
        for(j=0;j<=n;j++)
        {
          printf("%d ",ar[i][j]);  
        }
    printf("\n");    
    }
    printf("\nThe Longest Common Subsequence length is: %d\n",ar[m][n]);
    printf("The Longest Common Subsequence is:");
    print(m,n);
    return 0;
}
